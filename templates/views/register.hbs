<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="e-commerce project" />
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>E-commerce</title>
</head>
<body>
   {{>navbar}} 
   <!-- main stat here -->
    <main>
      <section class="register">
        <h2 class="section-title text-center">User Registration</h2>
        <div class="card">
          <form action="/register" method="POST" class="form">

            <div class="form-control flex-center">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required autocomplete="name"  placeholder="First and Last Name"/>
            </div>


            <div class="form-control flexing">
                <label class="flexing" for="name">Gender</label>
                Male: <input  type="radio" id="male" value="male" name="gender" required  />
                Female: <input type="radio" id="female" name="gender" value="female"  />
            </div>

            <div class="form-control flex-center">
              <label for="birthday">Birthday</label>
              <input type="date" name="birthday" id="birthday" name="birthday"> 
            </div>

            <div class="form-control flex-center">
              <label for="name">Contact Number</label>
              <input type="text" name="phone" id="number" required autocomplete="number"  placeholder="Phone Number"/>
            </div>

            <div class="form-control flex-center">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" required autocomplete="email"  placeholder="Email" />
            </div>

            <div class="form-control flex-center">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                required
                name="password"
                placeholder="Password"
              />
            </div>

            <div class="form-control flex-center">
              <label for="password">Confirm Password</label>
              <input
                type="password"
                id="password"
                required
                name="confirmPassword"
                placeholder="Confirm Password"
              />
            </div>

            {{!-- <div class="form-control flex-center">
              <label for="about">About me</label>
              <textarea name="about" id="about"></textarea>
            </div> --}}

            <div class="form-control flex-center form-btn-field">
              <button class="btn contact-btn">Submit</button>
            </div>
          </form>
        </div>
      </section>
    </main>
    <!-- main end here -->
   {{>footer}}
</body>
</html>